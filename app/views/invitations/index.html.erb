
<div style="overflow:scroll;padding:25px;">

  <p id="notice"><%= notice %></p>

  <h1><%= pluralize(@invitations.size, 'Invitations') %></h1>

  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th>Claimed date</th>
        <th>Ip address</th>
        <th>User agent</th>
        <th>Invite code</th>
        <th>Claimed</th>
        <th>Status</th>
        <th>Attempts</th>
        <th>User</th>
        <th>Subscriber</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @invitations.each do |invitation| %>
        <tr>
          <td><%= invitation.claimed_date %></td>
          <td><%= invitation.ip_address %></td>
          <td><%= invitation.user_agent %></td>
          <td><%= invitation.invite_code %></td>
          <td><%= invitation.claimed %></td>
          <td><%= invitation.status %></td>
          <td><%= invitation.attempts %></td>
          <td><%= invitation.user %></td>
          <td><%= invitation.subscriber %></td>
          <td><%= link_to 'Show', invitation %></td>
          <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
          <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Invitation', new_invitation_path %>

</div>