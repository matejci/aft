function isEmpty(obj) {
  for(var key in obj) {
      if(obj.hasOwnProperty(key))
          return false
  }
  return true
}

class EnvClient {
  constructor() {
    this.environment = "<%= ENV['HEROKU_ENV'] %>"
    this.urlBase = "<%= ENV['URL_BASE'] %>"
    this.mixpanelToken = "<%= ENV['MIXPANEL_TOKEN'] %>"
    this.mixpanelStatus = "<%= ENV['MIXPANEL_STATUS'] %>"

    this.init()
  }

  init = () => {
    // console.log('EnvClient init')
  }

  mixpanelTracking = () => {
    return !isEmpty(this.mixpanelToken) && !isEmpty(this.mixpanelStatus)
  }
}

export default new EnvClient